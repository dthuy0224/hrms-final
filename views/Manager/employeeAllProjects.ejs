<!DOCTYPE html>
<html>
    <%- include('../partials/header') %>

  <body>
    <nav class="navbar navbar-default no-margin">
            <!-- Brand and toggle get grouped for better mobile display -->

            <div class="navbar-header fixed-brand">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" id="menu-toggle">
                    <span class="glyphicon glyphicon-th-large" style="margin-left:5px;" aria-hidden="true"></span>
                </button>
                <a class="navbar-brand" href="#">
                    <%= userName %>
                </a>
            </div><!-- navbar-header-->

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <button class="navbar-toggle collapse in" data-toggle="collapse" id="menu-toggle-2"><span
                                class="glyphicon glyphicon-th-large" aria-hidden="true"></span></button>
                    </li>
                    <li class="navbar-brand">
                        <form action="/logout" method="get">
                            <button id="logout" type="submit" style="margin-top: -3px;" class="btn btn-default"><i
                                    class="fa fa-sign-out" aria-hidden="true"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div><!-- bs-example-navbar-collapse-1 -->
        </nav>
        <div id="wrapper">
            <!-- Include the sidebar partial with path parameter -->
            <% 
            // Define path if not defined
            var currentPath = typeof path !== 'undefined' ? path : '/manager/view-all-personal-projects';
            %>
            <%- include('../partials/sidebar', {path: currentPath}) %>
      <!-- /#sidebar-wrapper -->
      <!-- Page Content -->
      <div id="page-content-wrapper">
        <div class="container-fluid xyz">
          <div class="row">
            <div class="col-lg-12">
              

              <h2 class="ThuongTitleListOfEmployeeProjects"><i class="fa fa-angle-right"></i> List of Employee Projects</h2>
              <style>
                .ThuongTitleListOfEmployeeProjects {
                    font-family: "Times New Roman", Times, serif;
                    font-size: 1.6em;
                    padding-bottom: 9px;
                    margin: 10px 0 20px;
                    border-bottom: 1px solid #eee;
                    font-weight: bold;
                    color: #333;
                  }
                  </style>
              <h4>Employee: <%= user.name %>
              </h4>
              <% if(hasProject===1){ %>

                <div style="height: 600px; overflow: auto">
                  <table id="example" class="display" cellspacing="0" style="height: 10%; overflow: auto">
                    <thead>
                      <tr>
                        <th>Title</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th></th>
                      </tr>
                    </thead>
                    <tfoot>
                      <tr>
                        <th>Title</th>
                        <th>Type</th>
                        <th>Status</th>
                      </tr>
                    </tfoot>
                    <tbody>
                      <% projects.forEach(function(item){ %>
                        <tr>
                          <td>
                            <%= item.title %>
                          </td>
                          <td>
                            <%= item.type %>
                          </td>
                          <td>
                            <%= item.status %>
                          </td>
                          <td>
                            <table cellspacing="0px">
                              <tr>
                                <td style="padding: 0%">
                                  <form method="get" action="/manager/employee-project-info/<%= item._id %>">
                                    <button type="submit">
                                      <i class="fa fa-eye" title="View Projects Details" aria-hidden="true"></i>
                                    </button>
                                  </form>
                                </td>
                              </tr>
                            </table>
                          </td>
                        </tr>
                        <% }); %>
                    </tbody>
                  </table>
                </div>
                <% }else{ %>
                  <p>
                    <%= user.name %> is not associated with any project
                  </p>
                  <% } %>
            </div>
          </div>
        </div>
      </div>
      <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.3/jquery.js" charset="UTF-8"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.js" charset="UTF-8"></script>
    <script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
    <script src="/javascripts/sidebar_menu.js"></script>
    <script>
      $(document).ready(function () {
        $("#example").dataTable({
          /* No ordering applied by DataTables during initialisation */
          order: [],
        });
        for (i = new Date().getFullYear(); i > 1900; i--) {
          $("#year").append($("<option />").val(i).html(i));
        }

        // Setup - add a text input to each footer cell
        $("#example tfoot th").each(function () {
          var title = $(this).text();
          if (title != " ") {
            $(this).html(
              '<input type="text" class="form-control" placeholder="Search ' +
              title +
              '" />'
            );
          }
        });

        // DataTable
        var table = $("#example").DataTable();

        // Apply the search
        table.columns().every(function () {
          var that = this;

          $("input", this.footer()).on("keyup change", function () {
            if (that.search() !== this.value) {
              that.search(this.value).draw();
            }
          });
        });
      });
    </script>
  </body>

   
    <!-- Include modal templates -->
    <%- include('../partials/modals') %>

</html>