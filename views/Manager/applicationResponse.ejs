        <script>
            $(document).ready(function () {
                var box1height = $("#menu1").height();
                // Set box2 height equal to box1
                $("#sidebar-wrapper").height(box1height * 1.1);
                for (i = new Date().getFullYear(); i > 1950; i--) {
                    $("#year").append($("<option />").val(i).html(i));
                }
            });
        </script>
