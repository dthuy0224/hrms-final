<!DOCTYPE html>
<html>
<%- include('../partials/header') %>

<body>
  <nav class="navbar navbar-default no-margin">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header fixed-brand">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" id="menu-toggle">
        <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
      </button>
      <a class="navbar-brand" href="#">
        <%= userName %>
      </a>
    </div>
    <!-- navbar-header-->

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active">
          <button class="navbar-toggle collapse in" data-toggle="collapse" id="menu-toggle-2">
            <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
          </button>
        </li>
        <li class="navbar-brand">
          <form action="/logout" method="get">
            <button id="logout" type="submit" style="margin-top: -3px" class="btn btn-default">
              <i class="fa fa-user" aria-hidden="true"></i> Logout
            </button>
          </form>
        </li>
      </ul>
    </div>
    <!-- bs-example-navbar-collapse-1 -->
  </nav>
  <div id="wrapper">
    <!-- Sidebar -->
    <div id="sidebar-wrapper">
                <ul class="sidebar-nav nav-pills nav-stacked" id="menu">
                    <li>
                        <a href="/admin"><span class="fa-stack fa-lg pull-left"><i class="fa fa-dashboard fa-stack-1x"></i></span>
                            Dashboard</a>
                    </li>
                    <li class="active">
                        <a href="#" id="menu3"><span class="fa-stack fa-lg pull-left"><i
                                    class="fa fa-users fa-stack-1x"></i></span>
                            Employees</a>
                        <ul class="nav-pills nav-stacked" style="list-style-type: none">
                            <li class="active">
                                <a href="/admin/view-all-employees"><span class="fa-stack fa-lg pull-left"><i
                                            class="fa fa-eye fa-stack-1x"></i></span>View Employees</a>
                            </li>
                            <li>
                                <a href="/admin/add-employee"><span class="fa-stack fa-lg pull-left"><i
                                            class="fa fa-plus fa-stack-1x"></i></span>Add Employees</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="/admin/leave-applications"><span class="fa-stack fa-lg pull-left"><i
                                    class="fa fa-envelope-square fa-stack-1x"></i></span>
                            Approve Leave</a>
                    </li>
                  <li data-toggle="modal" data-target="#myModal2">
                        <a href="#"><span class="fa-stack fa-lg pull-left"><i
                                    class="fa fa-check-circle fa-stack-1x"></i></span>Mark Attendance</a>
                    </li> 
 <li>
                        <a href="/admin/employees-attendance">
                            <span class="fa-stack fa-lg pull-left"><i class="fa fa-list-ol fa-stack-1x"></i></span>
                            Attendance</a>
                    </li>
                    
                    <li>
                        <a href="/admin/view-profile"><span class="fa-stack fa-lg pull-left"><i
                                    class="fa fa-user fa-stack-1x"></i></span>View Profile</a>
                    </li>
                </ul>
            </div>
            <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
      <div class="container-fluid xyz">
        <div class="row">
          <div class="col-lg-12">
            <h1>
              Employees List
            </h1>
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Date Of Birth</th>
                    <th>Department</th>
                    <th>Contact Number</th>
                    <th>Designation</th>
                    <th>Pay Slip</th>
                    <th>Salary</th>
                    <th>Bonus</th>
                    <th>Increment</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i=0;i<users.length;i++){ %>
                  <tr>
                    <td><%= users[i]._id %></td>
                    <td><%= users[i].name %></td>
                    <td><%= users[i].email %></td>
                    <td><%= users[i].dateOfBirth.toDateString() %></td>
                    <td><%= users[i].department %></td>
                    <td><%= users[i].contactNumber %></td>
                    <td><%= users[i].designation %></td>
                    <td><a href="/admin/generate-pay-slip/<%= users[i]._id %>"> Pay Slip</a> </td>
                    <td>
                      <button type="button" class="btn btn-primary btn-xs" data-toggle="modal"
                        data-target="#myModal<%= users[i]._id %>">Set Salary</button>
                    </td>
                    <td>
                      <button type="button" class="btn btn-warning btn-xs" data-toggle="modal"
                        data-target="#myModalb<%= users[i]._id %>">Set Bonus</button>
                    </td>
                    <td>
                      <button type="button" class="btn btn-success btn-xs" data-toggle="modal"
                        data-target="#myModals<%= users[i]._id %>">Increment</button>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /#page-content-wrapper -->
  </div>
  <% for(var i=0;i<users.length;i++){ %>
  <div id="myModal<%= users[i]._id %>" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <form method="post" action="/admin/set-salary">
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Set Salary</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label>Employee Name</label>
              <input class="form-control" name="name" value="<%= users[i].name %>" disabled>
            </div>
            <div class="form-group">
              <label>Current Salary</label>
              <input class="form-control" name="current_salary" value="<%= salary[i].salary %>" disabled>
            </div>
            <div class="form-group">
              <label>New Salary</label>
              <input class="form-control" name="salary" value="<%= salary[i].salary %>">
            </div>
          </div>
          <div class="modal-footer">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="hidden" name="employee_salary" value="<%= users[i]._id %>">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Proceed</button>
          </div>
        </div>
      </form>
    </div>
  </div>


  <div id="myModalb<%= users[i]._id %>" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <form method="post" action="/admin/set-bonus">
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Set Bonus</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label>Employee Name</label>
              <input class="form-control" name="name" value="<%= users[i].name %>" disabled>
            </div>
            <div class="form-group">
              <label>Bonus Amount</label>
              <input class="form-control" name="bonus" value="<%= salary[i].bonus %>" placeholder="Enter Bonus">
            </div>
            <div class="form-group">
              <label>Reason (optional)</label>
              <input class="form-control" name="reason" value="<%= salary[i].reason %>" placeholder="Enter reason for Bonus">
            </div>
          </div>
          <div class="modal-footer">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="hidden" name="employee_bonus" value="<%= users[i]._id %>">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Proceed</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <div id="myModals<%= users[i]._id %>" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <form method="post" action="/admin/increment-salary">
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Increment Salary</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label>Employee Name</label>
              <input class="form-control" name="name" value="<%= users[i].name %>" disabled>
            </div>
            <div class="form-group">
              <label>Current Salary</label>
              <input class="form-control" name="current_salary" value="<%= salary[i].salary %>" readonly>
            </div>
            <div class="form-group">
              <label>Increment Amount</label>
              <input class="form-control" name="amount_increment" placeholder="Enter amount to increment">
            </div>
          </div>
          <div class="modal-footer">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="hidden" name="employee_increment" value="<%= users[i]._id %>">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Proceed</button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <% } %>

  <!-- /#wrapper -->
  <!-- jQuery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.js" charset="UTF-8"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.js" charset="UTF-8"></script>

  <script src="/javascripts/sidebar_menu.js"></script>

</body>

</html> 