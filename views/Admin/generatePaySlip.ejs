                    </li>
                </ul>
            </div>
            <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
      <div class="container-fluid xyz">
        <div class="row">
          <div class="col-lg-12">
            <h1>
              Pay Slip: <%= employee.name %>
            </h1>
            <div class="panel panel-primary">
              <div class="panel-heading">
                <h3 class="panel-title">Generate Pay Slip</h3>
              </div>
              <div class="panel-body">
                <form method="post" class="form-horizontal" action="/admin/generate-pay-slip">
                  <div class="form-group">
                    <label class="control-label col-sm-2">Employee Name:</label>
                    <div class="col-sm-4">
                      <input type="text" class="form-control" disabled value="<%= employee.name %>">
                    </div>
                    <label class="control-label col-sm-2">Bank Name:</label>
                    <div class="col-sm-4">
                      <input type="text" class="form-control" name="bankName" value="<%= pay_slip.bankName %>" placeholder="Bank Name">
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-sm-2">Basic Pay:</label>
                    <div class="col-sm-4">
                      <input type="text" class="form-control" placeholder="Basic Pay" name="basicPay" value="<%= pay_slip.basicPay %>">
                    </div>
                    <label class="control-label col-sm-2">Bank Branch:</label>
                    <div class="col-sm-4">
                      <input type="text" class="form-control" name="branchAddress" value="<%= pay_slip.branchAddress %>" placeholder="Bank Branch Address">
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-sm-2">Overtime:</label>
                    <div class="col-sm-4">
                      <input type="text" class="form-control" placeholder="Overtime" name="overtime" value="<%= pay_slip.overtime %>">
                    </div>
                    <label class="control-label col-sm-2">Conveyance Allowance:</label>
                    <div class="col-sm-4">
                      <input type="text" class="form-control" placeholder="Conveyance Allowance" name="conveyanceAllowance" value="<%= pay_slip.conveyanceAllowance %>">
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-12">
                      <hr>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-12">
                      <input type="hidden" name="employee_id" value="<%= employee._id %>">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <button type="submit" class="btn btn-primary btn-block">Generate Pay Slip</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /#page-content-wrapper -->
  </div>
  <!-- /#wrapper -->
