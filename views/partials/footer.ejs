        "display": "block",
        "visibility": "visible",
        "opacity": "1",
        "width": "250px"
    });
    
    // Handle menu toggle
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    
    function applySidebarCollapsed() {
        // Đảm bảo sidebar luôn hiển thị khi thu gọn
        $("#sidebar-wrapper").css({
            "display": "block",
            "visibility": "visible",
            "opacity": "1",
            "width": "50px",
            "min-width": "50px",
            "position": "fixed",
            "left": "0",
            "margin-left": "0",
            "z-index": "1000",
            "overflow": "hidden"
        });
        
        // Reset và định vị lại tất cả các phần tử sidebar
        $(".sidebar-nav").css({
            "width": "50px",
            "margin": "0",
            "padding": "0"
        });
        
        // Ẩn toàn bộ text và cấu hình lại thẻ a để dùng flexbox
        $(".sidebar-nav li a").css({
            "text-indent": "-9999px",
            "font-size": "0",
            "color": "transparent",
            "overflow": "hidden", 
            "width": "50px",
            "height": "40px",
            "padding": "0",
            "margin": "0",
            "display": "flex",
            "justify-content": "center",
            "align-items": "center",
            "text-decoration": "none"
        });
        
        // Ẩn hoàn toàn các phần tử span
        $(".sidebar-nav li a span, .sidebar-nav li a span:not(.fa-stack)").css({
            "display": "none",
            "visibility": "hidden",
            "opacity": "0",
            "width": "0",
            "height": "0",
            "overflow": "hidden",
            "font-size": "0",
            "position": "absolute",
            "left": "-9999px"
        });
        
        // Hiển thị và căn giữa chính xác icon thông thường với flexbox
        $(".sidebar-nav li a > i:not(.fa-stack i)").css({
            "display": "flex",
            "justify-content": "center",
            "align-items": "center",
            "visibility": "visible",
            "opacity": "1",
            "font-size": "24px", // Tăng kích thước
            "width": "100%",
            "height": "100%",
            "margin": "0",
            "padding": "0",
            "text-indent": "0",
            "position": "static",
            "float": "none",
            "color": "#999"
        });
        
        // Xử lý cả trường hợp icon nằm trong fa-stack
        $(".sidebar-nav li a .fa-stack").css({
            "display": "flex",
            "justify-content": "center",
            "align-items": "center",
            "visibility": "visible",
            "opacity": "1",
            "width": "2em",
            "height": "2em",
            "line-height": "2em",
            "margin": "0 auto",
            "padding": "0",
            "text-indent": "0",
            "position": "relative"
        });
        
        $(".sidebar-nav li a .fa-stack i").css({
            "display": "inline-block",
            "visibility": "visible",
            "opacity": "1",
            "position": "absolute",
            "text-indent": "0",
            "color": "#999"
        });
        
        // Đặt kích thước cụ thể cho các icon trong stack
        $(".sidebar-nav li a .fa-stack .fa-stack-2x").css({
            "font-size": "2em",
            "left": "0",
            "top": "0",
            "width": "100%",
            "text-align": "center"
        });
        
        $(".sidebar-nav li a .fa-stack .fa-stack-1x").css({
            "font-size": "1em",
            "line-height": "inherit",
            "left": "0",
            "top": "0",
            "width": "100%",
            "text-align": "center"
        });
        
        // Đặt lại chiều rộng của li sidebar
        $(".sidebar-nav li").css({
            "width": "50px",
            "height": "40px",
            "overflow": "hidden",
            "padding": "0",
            "margin": "0",
            "display": "flex",
            "justify-content": "center",
            "align-items": "center",
            "position": "relative"
        });
        
        // Đặt màu trắng cho icon của menu active
        $("#menu li.active a i, #menu li.active a .fa-stack i").css({
            "color": "white"
        });
        
        // Điều chỉnh padding cho page-content-wrapper
        $("#page-content-wrapper").css({
            "margin-left": "50px",
            "width": "calc(100% - 50px)"
        });
    }
    
    function applySidebarExpanded() {
        // Khi hủy thu gọn, đặt lại chiều rộng ban đầu
        $("#sidebar-wrapper").css({
            "width": "250px",
            "margin-left": "-250px",
            "left": "250px",
            "overflow": "auto"
        });
        
        // Reset chiều rộng của sidebar-nav
        $(".sidebar-nav").css({
            "width": "250px",
            "margin": "0",
            "padding": "0"
        });
        
        // Hiển thị lại văn bản menu và điều chỉnh icon
        $(".sidebar-nav li a").css({
            "text-indent": "15px",
            "text-align": "left",
            "padding": "10px 15px",
            "white-space": "normal",
            "overflow": "visible",
            "width": "auto",
            "height": "auto",
            "line-height": "20px",
            "font-size": "14px",
            "color": "#999",
            "display": "block",
            "justify-content": "",
            "align-items": "",
            "text-decoration": "none"
        });
        
