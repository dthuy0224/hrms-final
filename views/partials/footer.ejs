    $("#menu-toggle-2").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled-2");
        // Reset any accidentally highlighted items when toggling
        $("#menu li:not(.active)").removeClass('highlighted');
        
        if ($("#wrapper").hasClass("toggled-2")) {
            applySidebarCollapsed();
        } else {
            applySidebarExpanded();
        }
    });
    
    // Ensure menu3 (Employees dropdown) works properly
    $("#menu3").click(function(e) {
        e.preventDefault();
        $(this).parent().find('ul').toggle();
    });
    
    // Handle clicks on modal triggers
    $('a[onclick*="modal"]').click(function(e) {
        e.stopPropagation();
        // Remove any incorrect highlights
        $(this).parent().siblings().not('.active').removeClass('highlighted');
        
        setTimeout(function() {
            $("#menu > li:first-child").show();
            // If menu structure was changed, restore it
            if ($("#menu > li").length < 2) {
                $("#sidebar-wrapper").html(originalMenuHTML);
                // Reattach event handlers for menu3
                $("#menu3").click(function(e) {
                    e.preventDefault();
                    $(this).parent().find('ul').toggle();
                });
            }
        }, 100);
    });
    
    // Monitor for dashboard disappearance and fix it
    setInterval(function() {
        if ($("#menu > li:first-child").css("display") === "none" || 
            $("#menu > li:first-child").length === 0) {
            $("#sidebar-wrapper").html(originalMenuHTML);
            // Reattach event handlers
            $("#menu3").click(function(e) {
                e.preventDefault();
                $(this).parent().find('ul').toggle();
            });
        }
        
        // Fix any highlighted items that shouldn't be
        $("#menu li:not(.active)").each(function() {
            if ($(this).hasClass('highlighted') || 
                $(this).attr('style') && $(this).attr('style').includes('rgb(51, 122, 183)')) {
                $(this).removeClass('highlighted');
                $(this).removeAttr('style');
            }
        });
        
        // Đảm bảo sidebar luôn hiển thị
        if ($("#sidebar-wrapper").css("width") === "0px" || 
            $("#sidebar-wrapper").css("display") === "none" ||
            $("#sidebar-wrapper").css("visibility") === "hidden") {
            
            if ($("#wrapper").hasClass("toggled-2")) {
                applySidebarCollapsed();
            } else {
                applySidebarExpanded();
            }
        }
        
        // Kiểm tra nếu các icons không hiển thị khi thu gọn
        if ($("#wrapper").hasClass("toggled-2")) {
            applySidebarCollapsed();
        }
        
    }, 100); // Kiểm tra thường xuyên hơn
    
    // Special handling for sidebar items in collapsed mode
    $("#menu li a").hover(
        function() {
            if ($("#wrapper").hasClass("toggled-2")) {
                $(this).parent().addClass('temp-highlight');
                $(this).find('i').css("color", "white");
            }
        },
        function() {
            $(this).parent().removeClass('temp-highlight');
            if (!$(this).parent().hasClass('active') && $("#wrapper").hasClass("toggled-2")) {
                $(this).find('i').css("color", "#999");
            }
        }
    );
    
    // Set active menu item based on current page
    var currentPath = window.location.pathname;
    $("#menu > li").each(function() {
        var href = $(this).find('a:first').attr('href');
        if (href && href !== '#' && href !== 'javascript:void(0);' && currentPath.indexOf(href) === 0) {
            $(this).addClass('active');
            $(this).siblings().removeClass('active').removeClass('highlighted');
        }
    });

    // Add hover effects to dashboard cards for all roles
    $('.panel').hover(
        function() {
            $(this).addClass('panel-hover');
            $(this).find('.panel-heading').addClass('panel-heading-hover');
            $(this).find('.huge').addClass('huge-hover');
        },
        function() {
            $(this).removeClass('panel-hover');
            $(this).find('.panel-heading').removeClass('panel-heading-hover');
            $(this).find('.huge').removeClass('huge-hover');
        }
    );
    
    // Kiểm tra trạng thái ban đầu của sidebar
    if ($("#wrapper").hasClass("toggled-2")) {
        // Nếu đang ở chế độ thu gọn, ẩn văn bản và chỉ hiển thị icons
        applySidebarCollapsed();
    }
});
</script>

